{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "../../types",
      "../../node_modules/@types"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitOverride": false,
    "baseUrl": "../..",
    "paths": {
      "@digitaldefiance/i18n-lib": [
        "dist/packages/digitaldefiance-i18n-lib/src/index.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}