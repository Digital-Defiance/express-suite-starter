# Database Configuration
MONGO_URI=mongodb://localhost:27017/{{WORKSPACE_NAME}}
MONGO_USE_TRANSACTIONS=true
MONGO_TRANSACTION_RETRY_BASE_DELAY=75
MONGO_TRANSACTION_TIMEOUT=60000
MONGO_TRANSACTION_LOCK_REQUEST_TIMEOUT=30000
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME_MS=30000
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=45000
MONGO_RETRY_WRITES=true
MONGO_RETRY_READS=true

# Security Secrets (generate with: openssl rand -hex 32)
JWT_SECRET={{EXAMPLE_JWT_SECRET}}
MNEMONIC_ENCRYPTION_KEY=
MNEMONIC_HMAC_SECRET=

# AWS Configuration (for email and translation services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# Application Settings
DEBUG=true
DETAILED_DEBUG=true
HOST=0.0.0.0
PORT=3000
HTTPS_DEV_PORT=3443
HOSTNAME={{HOSTNAME}}

# Build Paths
API_DIST_DIR=./dist/{{API_APP_NAME}}
REACT_DIST_DIR=./dist/{{REACT_APP_NAME}}

# System User Configuration (generated by inituserdb)
SYSTEM_ID=
SYSTEM_MNEMONIC=
SYSTEM_PUBLIC_KEY=
SYSTEM_PASSWORD=
SYSTEM_ROLE_ID=
SYSTEM_USER_ROLE_ID=

# Admin User Configuration (generated by inituserdb)
ADMIN_ID=
ADMIN_MNEMONIC=
ADMIN_PASSWORD=
ADMIN_ROLE_ID=
ADMIN_USER_ROLE_ID=

# Member User Configuration (generated by inituserdb)
MEMBER_ID=
MEMBER_MNEMONIC=
MEMBER_PASSWORD=
MEMBER_ROLE_ID=
MEMBER_USER_ROLE_ID=
